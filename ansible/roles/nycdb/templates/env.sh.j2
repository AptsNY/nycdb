export PGPASSWORD={{ nycdb_database_password }}

execute_sql () {
 psql -h {{ nycdb_database_host }} -d {{ nycdb_database_name }} -U {{ nycdb_database_user }} -f $1
}

execute_sql_cmd () {
 psql -h {{ nycdb_database_host }} -d {{ nycdb_database_name }} -U {{ nycdb_database_user }} --command "$1"
}

NYCDB_CONNECTION_STRING="dbname={{ nycdb_database_name }} user={{ nycdb_database_user }} password={{ nycdb_database_password }} host={{ nycdb_database_host }}"



